<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="537dp"
        android:layout_height="954dp"
        app:srcCompat="@drawable/affiche_van_volkswagen__1__jpeg"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="-81dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="340dp"
        android:layout_height="132dp"
        android:text="     let's enjoy \n  the vacation"
        android:textColor="#FBFBFB"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <!-- Bouton Sign in avec fond noir -->
    <Button
        android:id="@+id/button_signin"
        android:layout_width="196dp"
        android:layout_height="45dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#EA7009"
        android:gravity="center"
        android:contextClickable="false"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <!-- Bouton Log in avec fond blanc -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#121210"
        android:gravity="center"
        android:text="@string/log_in"
        android:textColor="#E2E2E2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

</androidx.constraintlayout.widget.ConstraintLayout>